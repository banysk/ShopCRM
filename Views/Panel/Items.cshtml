@using ShopCRM.Utils;
@{
    Layout = "~/Views/Panel/_Layout.cshtml";
    ViewBag.Title = "Orders";
}
@model List<Item>

<div class="section">
    <div class="table__container">
        @Html.Raw(Tabler.FromItems(Model))
    </div>

    <div class="button__container">
        @{
            if (ViewBag.Page > 1)
            {
                <div class="panel__button" onclick="location.href='/Panel/Items/@{Write(ViewBag.Page-1);}'">
                    &lt
                </div>    
            }
        }

        @{
            if (ViewBag.Page * 6 + 1 <= ViewBag.Metrics.Items)
            {
                <div class="panel__button" onclick="location.href='/Panel/Items/@{Write(ViewBag.Page+1);}'">
                    &gt
                </div>
            }
        }
    </div>
</div>

<style>
    .section {
        width: 100%;
        height: 100%;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;

        overflow: hidden;
    }

    .button__container {
        display: flex;
        flex-direction: row;
        align-items: end;
        justify-content: center;

        flex: 1;
    }

    .section img {
        width: 85px;
        height: 85px;
        padding: 0;
        margin: 0;

        align-self: center;
        justify-self: center;
    }

    .img {
        padding: 0px !important;
        margin: 0px !important;
    }
</style>